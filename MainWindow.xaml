        <Button x:Name="AddElementButton" Content="Add Element" HorizontalAlignment="Left" Margin="63,59,0,0" VerticalAlignment="Top" Height="32" Width="107" Click="Button_AddElement"/>
        <Label x:Name="Label1" Content="" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" Height="111" Width="362"/>
        <Button Content="&#xD;&#xA;Print List&#xD;&#xA;" HorizontalAlignment="Left" Margin="63,148,0,0" VerticalAlignment="Top" Height="46" Width="107" Click="Button_PrintList" RenderTransformOrigin="0.512,0.666"/>
